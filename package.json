{
  "name": "live-server",
  "displayName": "Live Server",
  "description": "Launch a development local Server with live reload",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:live-server.start",
    "onCommand:live-server.stop"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.60.0",
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.5",
    "typescript": "^4.9.5",
    "open": "^8.0.4"
  },
  "contributes": {
    "commands": [
      {
        "command": "live-server.start",
        "title": "Live Server: Start Server"
      },
      {
        "command": "live-server.stop",
        "title": "Live Server: Stop Server"
      }
    ],
    "configuration": {
      "title": "Live Server",
      "properties": {
        "liveServer.port": {
          "type": "number",
          "default": 4444,
          "description": "Set custom port"
        },
        "liveServer.root": {
          "type": "string",
          "default": "/",
          "description": "Set custom root directory"
        }
      }
    }
  }
}