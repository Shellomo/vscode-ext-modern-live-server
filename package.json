{
  "name": "modern-live-server",
  "displayName": "âš¡ Modern Live Server Pro",
  "description": "Next-generation live server with instant reload, WebSocket sync, and zero-config setup. Perfect for modern web development with React, Vue, or vanilla HTML/CSS/JS projects.",
  "version": "1.0.0",
  "publisher": "Shellomo",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "keywords": [
    "live server",
    "live reload",
    "web server",
    "development server",
    "hot reload",
    "local server",
    "static server",
    "websocket",
    "dev tools",
    "preview"
  ],
  "galleryBanner": {
    "color": "#2B2B5C",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.60.0",
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.5",
    "typescript": "^4.9.5",
    "open": "^8.0.4"
  },
  "contributes": {
    "commands": [
      {
        "command": "live-server.start",
        "title": "Modern Live Server: Start Server"
      },
      {
        "command": "live-server.stop",
        "title": "Modern Live Server: Stop Server"
      }
    ],
    "configuration": {
      "title": "Modern Live Server",
      "properties": {
        "liveServer.port": {
          "type": "number",
          "default": 4444,
          "description": "Set custom port for the live server"
        },
        "liveServer.root": {
          "type": "string",
          "default": "/",
          "description": "Set custom root directory for serving files"
        },
        "liveServer.autoOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open browser when server starts"
        }
      }
    }
  },
  "badges": [
    {
      "url": "https://img.shields.io/badge/Install-Now-blue.svg",
      "href": "https://marketplace.visualstudio.com/items?itemName=YourPublisherName.modern-live-server",
      "description": "Install Modern Live Server"
    }
  ],
  "icon": "media/modern-live-server-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shellomo/vscode-ext-modern-live-server"
  }
}